extdisable vimperator

set guioptions+=cmT
set wildmode=list:full

map l gt
map h gT

" usual keyboard quirk
map <F1> <Esc>

set nextpattern+=\\bcontinue\\b,\\bsuiv|suivant|suivante\\b

" search commands
command! -nargs=* gpy open gpy <args>
command! -nargs=* py open py <args>
command! -nargs=* enwp open enwp <args>
command! -nargs=* frwp open frwp <args>

command! resource source ~/.pentadactylrc

map <C-t> :tabopen<cr>

" improve reader and gmail
set pk+='https://mail\.google\.com/':jkygiunp?,'https://www\.google\.com/reader':jkgtunp?
